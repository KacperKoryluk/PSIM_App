<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@color/colorViewBoardPost_BG"
        android:orientation="vertical">


        <TextView
            android:id="@+id/view_post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/colorViewBoardPost_TitleBG"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Title"
            android:textAllCaps="false"
            android:textColor="@color/colorViewBoardPost_TitleFG"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/view_post_descbrief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="Description Brief..."
            android:textColor="@android:color/black"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/view_post_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="5dp"
            android:text="By Author"
            android:textAlignment="textEnd"
            android:textColor="@color/colorViewBoardPost_Author"
            android:textSize="18sp"
            android:textStyle="italic" />

    </LinearLayout>
</FrameLayout>
